{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "prolific/query-posts",
  "version": "1.0.0",
  "title": "Query Posts",
  "category": "prolific",
  "icon": "grid-view",
  "description": "Display posts with advanced query options, carousel mode, search and filter capabilities. Perfect for post grids, lists, and dynamic content.",
  "keywords": ["query", "posts", "carousel", "search", "filter", "grid", "list", "custom post type"],
  "supports": {
    "align": ["left", "center", "right", "wide", "full"],
    "anchor": true,
    "spacing": {
      "padding": true,
      "margin": true
    },
    "color": {
      "background": true,
      "text": true,
      "link": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    }
  },
  "attributes": {
    "blockId": {
      "type": "string",
      "default": ""
    },
    "anchor": {
      "type": "string"
    },
    "align": {
      "type": "string"
    },
    "postType": {
      "type": "string",
      "default": "post"
    },
    "postsPerPage": {
      "type": "number",
      "default": 10
    },
    "orderBy": {
      "type": "string",
      "default": "date"
    },
    "order": {
      "type": "string",
      "default": "desc"
    },
    "offset": {
      "type": "number",
      "default": 0
    },
    "includeIds": {
      "type": "string",
      "default": ""
    },
    "excludeIds": {
      "type": "string",
      "default": ""
    },
    "categories": {
      "type": "array",
      "default": []
    },
    "tags": {
      "type": "array",
      "default": []
    },
    "authorIds": {
      "type": "array",
      "default": []
    },
    "postStatus": {
      "type": "string",
      "default": "publish"
    },
    "stickyPosts": {
      "type": "string",
      "default": "include"
    },
    "taxonomyFilters": {
      "type": "object",
      "default": {}
    },
    "displayMode": {
      "type": "string",
      "default": "grid"
    },
    "columns": {
      "type": "number",
      "default": 3
    },
    "columnsTablet": {
      "type": "number",
      "default": 2
    },
    "columnsMobile": {
      "type": "number",
      "default": 1
    },
    "gap": {
      "type": "number",
      "default": 20
    },
    "equalHeight": {
      "type": "boolean",
      "default": false
    },
    "enableCarousel": {
      "type": "boolean",
      "default": false
    },
    "slidesPerViewDesktop": {
      "type": "number",
      "default": 3
    },
    "slidesPerViewTablet": {
      "type": "number",
      "default": 2
    },
    "slidesPerViewMobile": {
      "type": "number",
      "default": 1
    },
    "spaceBetweenDesktop": {
      "type": "number",
      "default": 30
    },
    "spaceBetweenTablet": {
      "type": "number",
      "default": 20
    },
    "spaceBetweenMobile": {
      "type": "number",
      "default": 10
    },
    "carouselLoop": {
      "type": "boolean",
      "default": false
    },
    "carouselAutoplay": {
      "type": "boolean",
      "default": false
    },
    "autoplayDelay": {
      "type": "number",
      "default": 3000
    },
    "carouselNavigation": {
      "type": "boolean",
      "default": true
    },
    "carouselPagination": {
      "type": "boolean",
      "default": true
    },
    "paginationType": {
      "type": "string",
      "default": "bullets"
    },
    "carouselSpeed": {
      "type": "number",
      "default": 300
    },
    "centeredSlides": {
      "type": "boolean",
      "default": false
    },
    "pauseOnHover": {
      "type": "boolean",
      "default": true
    },
    "grabCursor": {
      "type": "boolean",
      "default": true
    },
    "keyboard": {
      "type": "boolean",
      "default": true
    },
    "showSearch": {
      "type": "boolean",
      "default": false
    },
    "searchPlaceholder": {
      "type": "string",
      "default": "Search posts..."
    },
    "showCategoryFilter": {
      "type": "boolean",
      "default": false
    },
    "showTagFilter": {
      "type": "boolean",
      "default": false
    },
    "showDateFilter": {
      "type": "boolean",
      "default": false
    },
    "showSortDropdown": {
      "type": "boolean",
      "default": false
    },
    "enableLoadMore": {
      "type": "boolean",
      "default": false
    },
    "loadMoreText": {
      "type": "string",
      "default": "Load More"
    },
    "enablePagination": {
      "type": "boolean",
      "default": false
    },
    "showFeaturedImage": {
      "type": "boolean",
      "default": true
    },
    "imageSizeSlug": {
      "type": "string",
      "default": "large"
    },
    "imagePosition": {
      "type": "string",
      "default": "top"
    },
    "showTitle": {
      "type": "boolean",
      "default": true
    },
    "titleTag": {
      "type": "string",
      "default": "h2"
    },
    "showExcerpt": {
      "type": "boolean",
      "default": true
    },
    "excerptLength": {
      "type": "number",
      "default": 55
    },
    "showMeta": {
      "type": "boolean",
      "default": true
    },
    "showAuthor": {
      "type": "boolean",
      "default": true
    },
    "showDate": {
      "type": "boolean",
      "default": true
    },
    "showCategories": {
      "type": "boolean",
      "default": true
    },
    "showTags": {
      "type": "boolean",
      "default": false
    },
    "showReadMore": {
      "type": "boolean",
      "default": true
    },
    "readMoreText": {
      "type": "string",
      "default": "Read More"
    },
    "noResultsText": {
      "type": "string",
      "default": "No posts found."
    }
  },
  "textdomain": "prolific-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": ["file:./view.js", "swiper-script"],
  "render": "file:./render.php"
}
